generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  rides Ride[]

  @@map("customers")
}

model Driver {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  vehicle     String
  review      String
  value       Int
  minimumKm   Int
  rides       Ride[]

  @@map("drivers")
}

model Ride {
  origin      String
  destination String
  distance    Int
  value       Int
  duration    String
  driverId    Int
  id          Int      @default(autoincrement())
  customerId  Int
  date        DateTime
  customer    Customer @relation(fields: [customerId], references: [id])
  driver      Driver   @relation(fields: [driverId], references: [id])

  @@id([driverId, customerId])
  @@map("rides")
}
